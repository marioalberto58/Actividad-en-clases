Algoritmo CalcularAreaYPerimetro
	Definir radio,Área,Perímetro Como Real
	Escribir 'Introduzca el radio de la circunferencia'
	Leer radio
	Área <- PI*radio*radio
	Perímetro <- 2*PI*radio
	Escribir 'El área es igual a ',Área
	Escribir 'El perímetro es igual a ',Perímetro
FinAlgoritmo

Algoritmo PrecioPromedio
	Definir a, b, c, promedio Como Real
	Escribir "Introduzca 3 valores"
	Leer a, b, c
	Promedio=(a+b+c)/3
	Escribir "El promedio es igual a " Promedio
FinAlgoritmo

Algoritmo ConvertirMetros
	Definir metros Como Real
	Escribir "Introduzca un valor en metros"
	Leer metros
	cm=metros*100
	ml=metros*1000
	pg=metros*0.0254
	Escribir "El valor en centímetros es " cm
	Escribir "El valor en milímetros es " ml
	Escribir "El valor en pulgadas es " pg
FinAlgoritmo
